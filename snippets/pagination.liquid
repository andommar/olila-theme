{% if pagination.pages > 1 %}
    <nav role="navigation" class="flex justify-center my-8">
        {% if pagination.previous %}
            <a href="{{ pagination.previous.url }}" class="border border-gray-600 text-gray-600
             hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">
                Previous
            </a>
        {% endif %}

        {% for part in pagination.parts %}
            {% if part.is_link %}
                <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 
                hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">
                    {{ part.title }}
            {% else %}
                <span class="border border-gray-600 bg-clr_primary_variaton
                 text-gray-500 px-8 py-3 mx-1 rounded-sm font-medium">
                    {{ part.title }}
                </span>
            {% endif %}

            </a>
        {% endfor %}

        {% if pagination.next %}
            <a href="{{ pagination.next.url }}" class="border border-gray-600 text-gray-600
            hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">
                Next
            </a>
        {% endif %}
    </nav>
{% endif %}