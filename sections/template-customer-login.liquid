<div class="md:container md:mx-auto px-3">
    <div class="w-full flex flex-col items-center justify-center my-10">
        <h3 class="w-full text-center">Sign in to your account</h3>
        <div class="w-full flex flex-col items-center justify-center">
            {% form 'customer_login' %}
                <div class="my-2">
                    {% if form.errors %}
                        <div class="border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
                            <strong class="font-bold">Error</strong>
                            <p>{{ form.errors | default_errors }}</p>
                        </div>
                    {% endif %}
                        <label for="email_address" class="sr-only">Email address</label>
                        <input  type="email" 
                                name="customer[email]"
                                id="email_address"
                                autocomplete="email"
                                placeholder="Email address"
                                class="w-full px-3 py-2 border"
                        >
                </div>
                <div class="my-2">
                    {% if form.password_needed %}
                        <label for="password" class="sr-only">Password</label>
                        <input  type="password" 
                                name="customer[password]"
                                id="password"
                                autocomplete="current-password"
                                placeholder="Password"
                                class="w-full px-3 py-2 border"
                        >
                    {% endif %}
                </div>
                <a href="#" class="underline text-gray-500 hover:text-gray-900">Forgot password?</a>
                <div class="my-2 w-full text-center">
                    <button class="px-4 py-2 text-base font-medium shadow bg-clr_primary_variaton hover:bg-clr_primary text-white" type="submit">
                        Sign in
                    </button>
                </div>
            {% endform %}
        </div>
    </div>
    <div class="w-full flex flex-col items-center justify-center my-10">
        <h3 class="w-full text-center">Recover your password</h3>
        <div class="w-full flex flex-col items-center justify-center">
            {% form 'recover_customer_password' %}
                <div class="my-2">
                    {% if form.errors %}
                        <div class="border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
                            <strong class="font-bold">Error</strong>
                            <p>{{ form.errors | default_errors }}</p>
                        </div>
                    {% endif %}
                        <label for="email" class="sr-only">Email address</label>
                        <input  type="email" 
                                name="email"
                                id="email"
                                autocomplete="email"
                                placeholder="Email address"
                                class="w-full px-3 py-2 border"
                        >
                </div>

                <div class="my-2 w-full text-center">
                    <button class="px-4 py-2 text-base font-medium shadow bg-clr_primary_variaton hover:bg-clr_primary text-white" type="submit">
                        Recover password
                    </button>
                </div>
                <a href="#" class="underline text-gray-500 hover:text-gray-900">Back to login</a>
            {% endform %}
        </div>
    </div>
</div>