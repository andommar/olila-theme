        watchSlidesProgress: true,
      });
let swiper_product_thumbnail = new Swiper(".mySwiper2", {
spaceBetween: 10,
navigation: {
    nextEl: "#swiper-button-next-product-{{ section.id }}",
    prevEl: "#swiper-button-prev-product-{{ section.id }}",
},
thumbs: {
    swiper: swiper_product,
},
});
</script>

