<div class="md:container md:mx-auto px-3">
    <div class="w-full flex flex-col items-center justify-center my-10" id="login-password-form">
        <h3 class="w-full text-center">Sign in to your account</h3>
        <div class="w-full flex flex-col items-center justify-center">
            {% form 'create_customer', return_to: routes.root_url %}
                <div class="my-2">
                    {% if form.errors %}
                        <div class="border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
                            <strong class="font-bold">Error</strong>
                            <p>{{ form.errors | default_errors }}</p>
                        </div>
                    {% endif %}

                    {% if form.posted_successfully? %}
                            <div class="border border-green-700 bg-green-400 text-red 700 px-4 py-3" role="alert">
                                <strong class="font-bold">Success</strong>
                            <p>User account created succesfully</p>
                        </div>
                    {% endif %}
                    <div class="my-2">
                        <label for="first_name" class="sr-only">First name</label>
                        <input  type="text" 
                                name="customer[first_name]"
                                id="first_name"
                                autocomplete="given-name"
                                placeholder="First name"
                                class="w-full px-3 py-2 border"
                        >
                    </div>
                    <div class="my-2">
                        <label for="last_name" class="sr-only">Last name</label>
                        <input  type="text" 
                                name="customer[last_name]"
                                id="last_name"
                                autocomplete="family-name"
                                placeholder="Last name"
                                class="w-full px-3 py-2 border"
                        >
                    </div>
                    <div class="my-2">
                        <label for="email_address" class="sr-only">Email address</label>
                        <input  type="email" 
                                name="customer[email]"
                                id="email_address"
                                autocomplete="email"
                                placeholder="Email address"
                                class="w-full px-3 py-2 border"
                        >
                    </div>
                </div>
                <div class="my-2">
                        <label for="password" class="sr-only">Password</label>
                        <input  type="password" 
                                name="customer[password]"
                                id="password"
                                autocomplete="new-password"
                                placeholder="Password"
                                class="w-full px-3 py-2 border"
                        >
                </div>

                <div class="my-2 w-full text-center">
                    <button class="px-4 py-2 text-base font-medium shadow bg-clr_primary_variaton hover:bg-clr_primary text-white" 
                    type="submit">
                        Create account
                    </button>
                </div>
            {% endform %}
        </div>
    </div>
    <div class="w-full hidden flex flex-col items-center justify-center my-10" id="recover-password-form">
        <h3 class="w-full text-center">Recover your password</h3>
        <div class="w-full flex flex-col items-center justify-center">
            {% form 'recover_customer_password' %}
                <div class="my-2">
                    {% if form.errors %}
                        <div class="border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
                            <strong class="font-bold">Error</strong>
                            <p>{{ form.errors | default_errors }}</p>
                        </div>
                    {% endif %}
                        <label for="email" class="sr-only">Email address</label>
                        <input  type="email" 
                                name="email"
                                id="email"
                                autocomplete="email"
                                placeholder="Email address"
                                class="w-full px-3 py-2 border"
                        >
                </div>

                <div class="my-2 w-full text-center">
                    <button class="px-4 py-2 text-base font-medium shadow bg-clr_primary_variaton hover:bg-clr_primary text-white" type="submit">
                        Recover password
                    </button>
                </div>
                <a href="#" class="underline text-gray-500 hover:text-gray-900"
                id="btnBackLogin">
                    Back to login
                </a>
            {% endform %}
        </div>
    </div>
</div>